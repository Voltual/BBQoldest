<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 登录提示（默认隐藏） -->
        <LinearLayout
            android:id="@+id/layoutLoginPrompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingVertical="48dp">

            <TextView
                android:id="@+id/textPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您尚未登录，请登录后使用完整功能"
                android:textSize="18sp"
                android:textColor="#666666"
                android:layout_marginBottom="24dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnLoginPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即登录"
                android:backgroundTint="#FB7299"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="32dp"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- 个人中心内容（默认显示） -->
        <LinearLayout
            android:id="@+id/layoutPersonalCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 用户信息卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                android:clipToPadding="false"
                android:clipChildren="false">
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>

                    <!-- 上半部分：背景 -->
                    <LinearLayout
                        android:id="@+id/layoutBackground"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="#FB7299"
                        android:orientation="vertical">
                        
                        <!-- 渐变遮罩 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_overlay"/>
                    </LinearLayout>

                    <!-- 用户头像容器 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBackground"
                        android:layout_marginTop="10dp"> <!-- 调整为-50dp使头像下移 -->

                        <!-- 用户头像 -->
                        <ImageView
                            android:id="@+id/ivAvatar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/ic_menu_profile"
                            android:background="@drawable/circle_bg"
                            android:padding="4dp"
                            android:contentDescription="用户头像"/>
                    </RelativeLayout>

                    <!-- 用户信息容器 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutBackground"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:paddingStart="112dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"> <!-- 增加底部内边距 -->

                        <!-- 昵称和等级 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:id="@+id/tvNickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BBQ用户"
                                android:textSize="18sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvLevel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LV0"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF"
                                android:background="@drawable/level_bg"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <!-- 硬币和ID信息 -->
                        <!-- 添加ID用于定位 -->
                        <LinearLayout
                            android:id="@+id/layoutCoinId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical"> <!-- 垂直居中 -->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="硬币:"
                                android:textSize="14sp"
                                android:textColor="#666666"/>

                            <TextView
                                android:id="@+id/tvCoins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未知"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginStart="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID:"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginStart="16dp"/>

                            <TextView
                                android:id="@+id/tvUserId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未知"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>

                        <!-- 统计信息：关注、粉丝、帖子、获赞 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

<!-- 我的关注 -->
<LinearLayout
    android:id="@+id/layoutFollowers"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tvFollowersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的关注"
        android:textSize="12sp"
        android:textColor="#666666"/>
</LinearLayout>

<!-- 我的粉丝 -->
<LinearLayout
    android:id="@+id/layoutFans"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tvFansCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的粉丝"
        android:textSize="12sp"
        android:textColor="#666666"/>
</LinearLayout>  
                          <!-- 我的帖子 -->
                            <LinearLayout
                                android:id="@+id/layoutPosts"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvPostsCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_primary"
                                    android:textStyle="bold"/>
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的帖子"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>
                            </LinearLayout>

                            <!-- 我的获赞 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvLikesCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_primary"
                                    android:textStyle="bold"/>
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的获赞"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- 功能区卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 功能区标题 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="时光基"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="探索更多精彩内容"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- 功能区列表 - 垂直布局 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 消息中心 -->
                        <LinearLayout
                            android:id="@+id/layoutMessageCenter"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/notifications"
                                android:tint="#FB7299"
                                android:layout_marginEnd="16dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="消息中心"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"/>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="#999999"/>
                        </LinearLayout>

                        <!-- 分隔线 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEEEE"
                            android:layout_marginStart="56dp"/>

                        <!-- 浏览记录 -->
                        <LinearLayout
                            android:id="@+id/layoutBrowseHistory"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_visibility"
                                android:tint="#FB7299"
                                android:layout_marginEnd="16dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="浏览记录"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"/>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="#999999"/>
                        </LinearLayout>

                        <!-- 分隔线 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEEEE"
                            android:layout_marginStart="56dp"/>

                        <!-- 我喜欢的 -->
                        <LinearLayout
                            android:id="@+id/layoutMyLikes"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/heart_favorites_open"
                                android:tint="#FB7299"
                                android:layout_marginEnd="16dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="我喜欢的"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"/>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="#999999"/>
                        </LinearLayout>

                        <!-- 分隔线 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEEEE"
                            android:layout_marginStart="56dp"/>

                        <!-- 账号资料 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/settings"
                                android:tint="#FB7299"
                                android:layout_marginEnd="16dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="账号资料"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"/>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="#999999"/>
                        </LinearLayout>

                        <!-- 分隔线 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEEEE"
                            android:layout_marginStart="56dp"/>

                        <!-- 我的资源 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/google_cloud_search"
                                android:tint="#FB7299"
                                android:layout_marginEnd="16dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="我的资源"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"/>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="#999999"/>
                        </LinearLayout>

                        <!-- 分隔线 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEEEE"
                            android:layout_marginStart="56dp"/>

                        <!-- 我的账单 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/mobills"
                                android:tint="#FB7299"
                                android:layout_marginEnd="16dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="我的账单"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"/>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="#999999"/>
                        </LinearLayout>

                        <!-- 分隔线 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEEEE"
                            android:layout_marginStart="56dp"/>

                        <!-- 捐助小趣 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/banking_4a"
                                android:tint="#FB7299"
                                android:layout_marginEnd="16dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="捐助小趣"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"/>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="#999999"/>
                        </LinearLayout>

                        <!-- 分隔线 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEEEE"
                            android:layout_marginStart="56dp"/>

                        <!-- 我的蓝云 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/nearme_cloud"
                                android:tint="#FB7299"
                                android:layout_marginEnd="16dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="我的蓝云"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"/>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_right"
                                android:tint="#999999"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>