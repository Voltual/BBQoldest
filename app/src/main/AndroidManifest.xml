<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    
    <uses-permission android:name="android.permission.INTERNET" />
    
    <application 
        android:name=".BBQApplication"
        android:allowBackup="true" 
        android:icon="@mipmap/ic_launcher" 
        android:roundIcon="@mipmap/ic_launcher" 
        android:label="@string/app_name" 
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true" 
        android:theme="@style/AppTheme">
        
        <activity 
            android:name=".MainActivity" 
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 添加搜索Activity -->
        <activity
            android:name=".ui.community.SearchActivity"
            android:theme="@style/AppTheme"
            android:exported="false">
            <!-- 添加搜索意图过滤器 -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <!-- 添加搜索元数据 -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        
        <!-- 添加帖子详情页 -->
        <activity
            android:name=".ui.community.PostDetailActivity"
            android:theme="@style/AppTheme"
            android:exported="false" />
        
        <activity
            android:name=".ui.community.PostCreateActivity"
            android:theme="@style/AppTheme"
            android:exported="false"/>
        
        <activity 
            android:name=".ui.plaza.AppDetailActivity"
            android:theme="@style/AppTheme"/>
   
        <activity
            android:name=".ui.message.MessageCenterActivity"
            android:theme="@style/AppTheme"
            android:exported="false" />
            
    
    <activity
        android:name=".ui.user.FanListActivity"
        android:theme="@style/AppTheme"
        android:exported="false"/>
        
    <activity
        android:name=".ui.user.FollowListActivity"
        android:theme="@style/AppTheme"
        android:exported="false"/>
        
        
<activity
    android:name=".ui.user.UserDetailActivity"
    android:theme="@style/AppTheme"
    android:exported="false"/>
    
            <activity
            android:name=".ui.user.MyPostsActivity"
            android:theme="@style/AppTheme"
            android:exported="false"/>
            
            <activity
    android:name=".ui.community.ImagePreviewActivity"
    android:theme="@style/Theme.AppCompat.NoActionBar"/>

  

        <service android:name=".HeartbeatService" />
    </application>
</manifest>